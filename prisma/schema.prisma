generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Storage Account States
enum StorageAccountStatus {
  ACTIVE      // Can be used for new uploads, fully functional
  INACTIVE    // Cannot be used for new uploads, existing data accessible
  DISCONNECTED // OAuth revoked, existing data preserved but inaccessible
  ERROR       // Connection issues, temporary state
}

model StorageAccount {
  id                String              @id @default(cuid())
  userId            String
  provider          String              // "google_drive", "dropbox"
  providerAccountId String              // External account ID from OAuth
  displayName       String              // User-friendly name
  email             String?             // Account email for identification
  status            StorageAccountStatus @default(ACTIVE) // NEW: Account state
  isActive          Boolean             @default(true)    // DEPRECATED: Use status instead
  lastError         String?             // NEW: Last error message for ERROR state
  lastAccessedAt    DateTime?           // NEW: Track last successful access
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  user              User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  portals           UploadPortal[]
  fileUploads       FileUpload[]
  
  @@unique([userId, providerAccountId, provider])
  @@index([userId])
  @@index([provider])
  @@index([status])
  @@index([isActive]) // Keep for backward compatibility
}

model User {
  id                String          @id @default(cuid())
  email             String          @unique
  name              String?
  createdAt         DateTime        @default(now())
  emailVerified     DateTime?
  image             String?
  updatedAt         DateTime        @updatedAt
  marketingEmail    Boolean         @default(true)
  notificationEmail Boolean         @default(true)
  theme             String          @default("system")
  role              String          @default("user")
  status            String          @default("active")
  accounts          Account[]
  Authenticator     Authenticator[]
  payments          Payment[]
  sessions          Session[]
  subscriptions     Subscription[]
  uploadPortals     UploadPortal[]
  syncSettings      SyncSettings?
  fileUploads       FileUpload[]
  auditLogs         AuditLog[]
  storageAccounts   StorageAccount[]
  // Communication System Relations
  tickets           Ticket[]
  adminTickets      Ticket[]        @relation("AdminTickets")
  messages          Message[]
  feedback          Feedback[]
  notifications     Notification[]
}

model SyncSettings {
  id               String   @id @default(cuid())
  userId           String   @unique
  autoSync         Boolean  @default(true)
  deleteAfterSync  Boolean  @default(false)
  syncInterval     Int      @default(3600)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@index([userId, provider])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?
  user                 User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

model UploadPortal {
  id                  String          @id @default(cuid())
  userId              String
  name                String
  slug                String          @unique
  description         String?
  logoUrl             String?
  primaryColor        String          @default("#4F46E5")
  isActive            Boolean         @default(true)
  maxFileSize         Int             @default(104857600)
  allowedFileTypes    String[]        @default([])
  requireClientName   Boolean         @default(true)
  requireClientEmail  Boolean         @default(false)
  passwordHash        String?
  storageProvider     String          @default("local")
  storageFolderId     String?
  storageFolderPath   String?
  storageAccountId    String?         // NEW: Bind to specific storage account
  useClientFolders    Boolean         @default(false)
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  backgroundColor     String?
  backgroundImageUrl  String?
  cardBackgroundColor String?         @default("#ffffff")
  submitButtonText    String?         @default("Initialize Transfer")
  successMessage      String?         @default("Transmission Verified")
  textColor           String?         @default("#0f172a")
  welcomeMessage      String?
  uploads             FileUpload[]
  chunkedUploads      ChunkedUpload[]
  user                User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  storageAccount      StorageAccount? @relation(fields: [storageAccountId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
}

model FileUpload {
  id              String       @id @default(cuid())
  portalId        String
  userId          String?
  fileName        String
  fileSize        Int
  mimeType        String
  clientName      String?
  clientEmail     String?
  clientMessage   String?
  storageProvider String
  storageFileId   String?
  storagePath     String?
  storageAccountId String?        // NEW: Permanently bind to storage account
  status          String       @default("pending")
  errorMessage    String?
  ipAddress       String?
  userAgent       String?
  createdAt       DateTime     @default(now())
  uploadedAt      DateTime?
  portal          UploadPortal @relation(fields: [portalId], references: [id], onDelete: Cascade)
  user            User?        @relation(fields: [userId], references: [id], onDelete: SetNull)
  storageAccount  StorageAccount? @relation(fields: [storageAccountId], references: [id], onDelete: SetNull)

  @@index([portalId, createdAt])
  @@index([userId])
  @@index([clientEmail])
  @@index([clientName])
}

model ChunkedUpload {
  id              String       @id @default(cuid())
  portalId        String
  fileName        String
  fileSize        Int
  mimeType        String
  totalChunks     Int
  uploadedChunks  Int          @default(0)
  clientName      String?
  clientEmail     String?
  clientMessage   String?
  status          String       @default("in_progress")
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  expiresAt       DateTime     @default(dbgenerated("now() + interval '24 hours'"))
  portal          UploadPortal @relation(fields: [portalId], references: [id], onDelete: Cascade)

  @@index([portalId, status])
  @@index([createdAt])
}

model NewsletterSubscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  status    String   @default("subscribed")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
}

model BillingPlan {
  id              String         @id @default(cuid())
  name            String         @unique
  description     String?
  price           Float
  currency        String         @default("USD")
  features        String[]
  isActive        Boolean        @default(true)
  maxPortals      Int            @default(1)
  maxStorageGB    Int            @default(1)
  maxUploadsMonth Int            @default(100)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  subscriptions   Subscription[]

  @@index([isActive])
  @@index([price])
}

model Subscription {
  id                     String              @id @default(cuid())
  userId                 String
  planId                 String
  status                 String              @default("active")
  currentPeriodStart     DateTime
  currentPeriodEnd       DateTime
  cancelAtPeriodEnd      Boolean             @default(false)
  providerSubscriptionId String?
  providerCustomerId     String?
  billingInterval        String              @default("monthly") // "monthly" | "yearly"
  nextBillingDate        DateTime?
  gracePeriodEnd         DateTime?
  retryCount             Int                 @default(0)
  lastPaymentAttempt     DateTime?
  createdAt              DateTime            @default(now())
  updatedAt              DateTime            @updatedAt
  payments               Payment[]
  history                SubscriptionHistory[]
  plan                   BillingPlan          @relation(fields: [planId], references: [id])
  user                   User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([nextBillingDate])
  @@index([gracePeriodEnd])
}

model Payment {
  id                 String        @id @default(cuid())
  subscriptionId     String?
  userId             String
  amount             Float
  currency           String        @default("USD")
  status             String        @default("pending") // "pending" | "processing" | "succeeded" | "failed" | "refunded"
  description        String?
  providerPaymentId  String?
  providerPaymentRef String?
  authorizationCode  String?       // Paystack authorization code for recurring payments
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  subscription       Subscription? @relation(fields: [subscriptionId], references: [id])
  user               User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([providerPaymentRef])
  @@index([authorizationCode])
}

model SubscriptionHistory {
  id             String       @id @default(cuid())
  subscriptionId String
  action         String       // "plan_changed" | "status_changed" | "cancelled" | "reactivated" | "renewed"
  oldValue       String?      // JSON string of old value
  newValue       String?      // JSON string of new value
  reason         String?
  createdAt      DateTime     @default(now())
  subscription   Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@index([subscriptionId])
  @@index([action])
  @@index([createdAt])
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String
  action     String
  resource   String
  resourceId String
  details    Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([createdAt])
}

model SystemSetting {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String?
  type        String   @default("string") // 'string', 'number', 'boolean', 'json'
  description String?
  category    String   @default("general")
  isPublic    Boolean  @default(false)
  updatedAt   DateTime @updatedAt
  updatedBy   String?
  createdAt   DateTime @default(now())

  @@index([category])
  @@index([isPublic])
}

model EmailTemplate {
  id           String   @id @default(cuid())
  name         String   @unique
  subject      String
  htmlContent  String
  textContent  String?
  variables    Json?
  isActive     Boolean  @default(true)
  category     String   @default("general")
  description  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdBy    String?
  updatedBy    String?

  @@index([category])
  @@index([isActive])
}

model AnalyticsData {
  id         String   @id @default(cuid())
  metric     String
  value      Float
  metadata   Json?
  period     String   // 'hourly', 'daily', 'weekly', 'monthly'
  recordedAt DateTime
  createdAt  DateTime @default(now())

  @@index([metric, period])
  @@index([recordedAt])
}

model PerformanceMetric {
  id           String   @id @default(cuid())
  endpoint     String
  method       String
  responseTime Int      // milliseconds
  statusCode   Int
  errorMessage String?
  userId       String?
  ipAddress    String?
  recordedAt   DateTime @default(now())

  @@index([endpoint])
  @@index([recordedAt])
  @@index([statusCode])
}

model SystemHealth {
  id        String   @id @default(cuid())
  component String   // 'database', 'storage', 'email', 'api'
  status    String   // 'healthy', 'warning', 'critical'
  metrics   Json?
  checkedAt DateTime @default(now())

  @@index([component])
  @@index([status])
  @@index([checkedAt])
}

// Communication System Models

model Ticket {
  id          String        @id @default(cuid())
  userId      String
  adminId     String?       // Assigned admin
  subject     String
  description String
  status      TicketStatus  @default(OPEN)
  priority    Priority      @default(MEDIUM)
  category    String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  closedAt    DateTime?
  
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  admin       User?         @relation("AdminTickets", fields: [adminId], references: [id])
  messages    Message[]
  attachments Attachment[]
  
  @@index([userId])
  @@index([adminId])
  @@index([status])
  @@index([createdAt])
  @@index([category])
}

model Message {
  id        String      @id @default(cuid())
  ticketId  String
  senderId  String
  content   String
  isAdmin   Boolean     @default(false)
  createdAt DateTime    @default(now())
  readAt    DateTime?
  
  ticket    Ticket      @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  sender    User        @relation(fields: [senderId], references: [id])
  attachments Attachment[]
  
  @@index([ticketId])
  @@index([senderId])
  @@index([createdAt])
}

model Attachment {
  id        String   @id @default(cuid())
  ticketId  String?
  messageId String?
  fileName  String
  fileUrl   String
  fileSize  Int
  mimeType  String
  createdAt DateTime @default(now())
  
  ticket    Ticket?  @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  message   Message? @relation(fields: [messageId], references: [id], onDelete: Cascade)
  
  @@index([ticketId])
  @@index([messageId])
}

model Feedback {
  id          String         @id @default(cuid())
  userId      String
  rating      Int            // 1-5 stars
  comment     String?
  category    FeedbackCategory
  status      FeedbackStatus @default(PENDING)
  adminNotes  String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([category])
  @@index([rating])
  @@index([status])
  @@index([createdAt])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  content   String
  data      Json?            // Additional data (ticketId, etc.)
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())
  
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([read])
  @@index([createdAt])
  @@index([type])
}

// Communication System Enums
enum TicketStatus {
  OPEN
  IN_PROGRESS
  WAITING_FOR_USER
  RESOLVED
  CLOSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum FeedbackCategory {
  GENERAL
  BUG_REPORT
  FEATURE_REQUEST
  UI_UX
  PERFORMANCE
  BILLING
}

enum FeedbackStatus {
  PENDING
  REVIEWED
  IMPLEMENTED
  REJECTED
}

enum NotificationType {
  TICKET_CREATED
  TICKET_UPDATED
  TICKET_RESOLVED
  MESSAGE_RECEIVED
  FEEDBACK_RESPONSE
  SYSTEM_ANNOUNCEMENT
}
