generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String          @id @default(cuid())
  email             String          @unique
  name              String?
  createdAt         DateTime        @default(now())
  emailVerified     DateTime?
  image             String?
  updatedAt         DateTime        @updatedAt
  marketingEmail    Boolean         @default(true)
  notificationEmail Boolean         @default(true)
  theme             String          @default("system")
  accounts          Account[]
  Authenticator     Authenticator[]
  payments          Payment[]
  sessions          Session[]
  subscriptions     Subscription[]
  uploadPortals     UploadPortal[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@index([userId, provider])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?
  user                 User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

model UploadPortal {
  id                  String       @id @default(cuid())
  userId              String
  name                String
  slug                String       @unique
  description         String?
  logoUrl             String?
  primaryColor        String       @default("#4F46E5")
  isActive            Boolean      @default(true)
  maxFileSize         Int          @default(104857600)
  allowedFileTypes    String[]     @default([])
  requireClientName   Boolean      @default(true)
  requireClientEmail  Boolean      @default(false)
  passwordHash        String?
  storageProvider     String       @default("local")
  storageFolderId     String?
  storageFolderPath   String?
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  backgroundColor     String?
  backgroundImageUrl  String?
  cardBackgroundColor String?      @default("#ffffff")
  submitButtonText    String?      @default("Initialize Transfer")
  successMessage      String?      @default("Transmission Verified")
  textColor           String?      @default("#0f172a")
  welcomeMessage      String?
  uploads             FileUpload[]
  user                User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model FileUpload {
  id              String       @id @default(cuid())
  portalId        String
  fileName        String
  fileSize        Int
  mimeType        String
  clientName      String?
  clientEmail     String?
  clientMessage   String?
  storageProvider String
  storageFileId   String?
  storagePath     String?
  status          String       @default("pending")
  errorMessage    String?
  ipAddress       String?
  userAgent       String?
  createdAt       DateTime     @default(now())
  uploadedAt      DateTime?
  portal          UploadPortal @relation(fields: [portalId], references: [id], onDelete: Cascade)

  @@index([portalId, createdAt])
  @@index([clientEmail])
  @@index([clientName])
}

model NewsletterSubscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  status    String   @default("subscribed")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
}

model BillingPlan {
  id              String         @id @default(cuid())
  name            String         @unique
  description     String?
  price           Float
  currency        String         @default("USD")
  features        String[]
  isActive        Boolean        @default(true)
  maxPortals      Int            @default(1)
  maxStorageGB    Int            @default(1)
  maxUploadsMonth Int            @default(100)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  subscriptions   Subscription[]

  @@index([isActive])
  @@index([price])
}

model Subscription {
  id                     String      @id @default(cuid())
  userId                 String
  planId                 String
  status                 String      @default("active")
  currentPeriodStart     DateTime
  currentPeriodEnd       DateTime
  cancelAtPeriodEnd      Boolean     @default(false)
  providerSubscriptionId String?
  providerCustomerId     String?
  createdAt              DateTime    @default(now())
  updatedAt              DateTime    @updatedAt
  payments               Payment[]
  plan                   BillingPlan @relation(fields: [planId], references: [id])
  user                   User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model Payment {
  id                 String        @id @default(cuid())
  subscriptionId     String?
  userId             String
  amount             Float
  currency           String        @default("USD")
  status             String        @default("pending")
  description        String?
  providerPaymentId  String?
  providerPaymentRef String?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  subscription       Subscription? @relation(fields: [subscriptionId], references: [id])
  user               User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([providerPaymentRef])
}
